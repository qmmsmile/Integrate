<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="defaultCache">

	<diskStore path="user.dir/ehcache/" />

	<!-- 默认缓存配置 -->
	<defaultCache maxElementsInMemory="100" eternal="true"
		overflowToDisk="true" />

	<!-- 系统缓存 -->
	<cache name="sysCache" maxElementsInMemory="1" maxElementsOnDisk="0"
		eternal="true" overflowToDisk="true" diskPersistent="true" />

</ehcache>